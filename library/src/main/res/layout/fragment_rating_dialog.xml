<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical">

        <io.stanwood.framework.widget.AspectRatioFrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:height_aspectRatio="1.5"
            app:height_relative_to="width">

            <ImageView
                android:id="@+id/imgBanner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />
        </io.stanwood.framework.widget.AspectRatioFrameLayout>

        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/developer_image_upper_margin"
            android:clipToPadding="false"
            android:paddingBottom="@dimen/item_padding">

            <ImageView
                android:id="@+id/imgShadow"
                android:layout_width="@dimen/developer_image"
                android:layout_height="@dimen/developer_image"
                android:layout_marginStart="@dimen/margin_developer_img"
                android:elevation="8dp" />

            <ImageView
                android:id="@+id/imgDeveloper"
                android:layout_width="@dimen/developer_image"
                android:layout_height="@dimen/developer_image"
                android:layout_marginStart="@dimen/margin_developer_img"
                android:elevation="8dp" />

        </FrameLayout>

        <TextView
            android:id="@+id/txt1"
            style="@style/DialogText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hi, ich bin Hannes, der Entwicker vn On Air" />

        <TextView
            android:id="@+id/txt2"
            style="@style/DialogText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/item_bottom_margin"
            android:text="Kleine App-Entwicker wie wir leben von gutten Bewertungen im App-Store" />

        <TextView
            android:id="@+id/txt3"
            style="@style/DialogText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/item_bottom_margin"
            android:text="Wenn Ihnen unsere App gefallt dann bewertend Sie uns doch bitte." />

        <TextView
            android:id="@+id/txt4"
            style="@style/DialogText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/item_bottom_margin"
            android:text="Sternchen reichen - dauert nur 1 Minute" />

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="24dp"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/btn_cancel"
                style="@style/ButtonText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_toLeftOf="@+id/btn_ok"
                tools:text="Cancel" />

            <Button
                android:id="@+id/btn_ok"
                style="@style/ButtonText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="8dp"
                tools:text="Ok" />
        </RelativeLayout>

    </LinearLayout>
</ScrollView>
